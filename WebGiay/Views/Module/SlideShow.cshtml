@model IEnumerable<MyClass.Model.Slider>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            if (i == 0)
            {
                <div class="carousel-item active my-carousel-item">
                    <img class="d-block w-100" src="~/public/images/slider/@item.image" alt="First slide">
                </div>
            }
            else
            {
                <div class="carousel-item my-carousel-item">
                    <img class="d-block w-100" src="~/public/images/slider/@item.image" alt="Second slide">
                </div>
            }
            i++;

        }

        @*<div class="carousel-item my-carousel-item">
            <img class="d-block w-100" src="~/public/images/slider/slider_pic3.jpg" alt="Second slide">
        </div>
        <div class="carousel-item my-carousel-item">
            <img class="d-block w-100" src="~/public/images/slider/slider_pic5.jpg" alt="Third slide">
        </div>*@
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
